@{
    ViewData["Title"] = "Details Page";
    Layout = "_MyLayout";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center"><img style="width:250px; height:250px;" src="~/img/Da Samu.svg" /></div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="pizza">
                    <img src="@Url.Content(Model.Image)" />
                    <div class="d-flex">
                        <h4 class="pt-3">@Model.Name</h4>
                        <a href="@Url.Action("Index", "Pizza")"><img style="width:20px; height:20px; margin: 10px;" src="~/img/back.png" /></a>
                    </div>
                    <p>@Model.Description</p>
                    <div>@Model.Price €</div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .pizza {
            display: flex;
            flex-direction: column;
            padding: 15px;
            text-align: center;
            align-items:center;
        }

            .pizza img {
                width: 200px;
                height: 200px;
                margin-bottom: 10px;
            }

            .pizza p {
                margin-bottom: 10px;
            }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
